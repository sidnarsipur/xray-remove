{
    "manifest_version": 3,
    "name": "Amazon X-Ray QuickView Remover",
    "version": "1.0",
    "description": "Removes the xrayQuickView div on Amazon pages.",
    "permissions": ["scripting"],
    "host_permissions": [
        "*://www.amazon.com/*",
        "*://www.amazon.in/*",
        "*://www.primevideo.com/*"
    ],
    "content_scripts": [
      {
        "matches": [
            "*://www.amazon.com/gp/video*",
            "*://www.amazon.in/gp/video*",
            "*://www.primevideo.com/*"
        ],
        "js": ["content.js"]
      }
    ]
}